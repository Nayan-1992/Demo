{
  "family": "<%= @family %>",
  "requiresCompatibilities": ["FARGATE"],
  "networkMode": "default",
  "cpu": "<%= @cpu %>",
  "memory": "<%= @memory %>",
  "containerDefinitions": [
    {
      "name": "<%= @name %>",
      "image": "<%= @image %>",
      <% if @container_port %>
      "portMappings": [
        {
          "containerPort": <%= @container_port %>,
          "protocol": "tcp"
        }
      ],
      <% end %>
      "command": <%= @command.to_json %>,
      <% if @environment %>
      "environment": <%= @environment.to_json %>,
      <% end %>
      "essential": true
    }
  ]
}
